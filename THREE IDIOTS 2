import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner AB=new Scanner(System.in);
        int x1=AB.nextInt();
         int x2=AB.nextInt();
         int y1=AB.nextInt();
        int y2=AB.nextInt();
        double a=(x1+y1)/2.0;
          double b=(x2+y2)/2.0;
        System.out.printf("Binoy's house is located at (%.1f,%.1f)",a,b);
        
      }
}
